<launch>
	<node pkg ="joy" type= "joy_node" name="joystick">
		<param name="autorepeat_rate" value ="1" />
	</node>
	
	<node pkg="teleop_twist_joy" type="teleop_node" name="joystick_to_twist">
		<param name="scale_angular" value="0.45" />	<!-- These need to be less than urdf limits -->
		<param name="scale_linear" value="2.0" />
		<param name="scale_linear_turbo" value="5.0"/>
		<param name="enable_button" value="5"/>
		<param name="enable_turbo_button" value="4"/>
		<param name="axis_angular" value="3"/>
		<param name="publish_frequency" value="10"/>
	</node>
</launch>